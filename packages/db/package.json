{
  "name": "@acme/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./client": {
      "default": "./src/client.ts"
    },
    "./client.ws": {
      "default": "./src/client.ws.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "biome format .",
    "lint": "biome lint .",
    "check": "biome check .",
    "push": "bun --env-file=../../.env run drizzle-kit push",
    "studio": "bun --env-file=../../.env run drizzle-kit studio",
    "drop": "bun --env-file=../../.env run src/scripts/drop-schema.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@neondatabase/serverless": "^1.0.2",
    "@vercel/postgres": "0.10.0",
    "drizzle-orm": "0.45.1",
    "drizzle-zod": "0.8.3",
    "pg": "^8.16.3",
    "ws": "^8.18.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@acme/tsconfig": "workspace:*",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "typescript": "5.9.3"
  }
}
